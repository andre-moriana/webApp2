API_BASE_URL=https://82.67.123.22:25000/api

# Configuration de l'application
APP_DEBUG=1
APP_NAME="Portail Archers de Gémenos"

# Configuration de l'envoi d'emails
# Modifiez ces valeurs selon vos besoins

# Adresse email de destination pour le formulaire de contact
CONTACT_EMAIL=nom@domaine.com

# Adresse email expéditrice
SMTP_FROM_EMAIL=noreply@domaine.com

# Nom de l'expéditeur
SMTP_FROM_NAME=Portail Arc Training

# Configuration SMTP
# Si EMAIL_METHOD=smtp, utilise SMTP au lieu de la fonction mail() de PHP
EMAIL_METHOD=smtp

# Serveur SMTP
# Exemples: smtp.gmail.com, smtp.free.fr, smtp.orange.fr
SMTP_HOST=smtp.free.fr

# Port SMTP
# 587 pour TLS, 465 pour SSL, 25 pour non sécurisé
SMTP_PORT=587

# Nom d'utilisateur SMTP
SMTP_USERNAME=

# Mot de passe SMTP
SMTP_PASSWORD=

# Type de chiffrement
# tls pour TLS, ssl pour SSL, vide pour aucun
SMTP_SECURE=tls
